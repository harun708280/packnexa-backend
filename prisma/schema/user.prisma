model User {
  id              String           @id @default(uuid())
  firstName       String
  lastName        String
  email           String           @unique
  password        String
  role            UserRole         @default(USER)
  contactNumber   String
  position        String?
  otp             String?
  otpExpires      DateTime?
  otpAttempts     Int?
  status          UserStatus       @default(ACTIVE)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  merchantDetails MerchantDetails?
  @@map("users")
}


